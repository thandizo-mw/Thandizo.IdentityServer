@model Thandizo.DataModels.Identity.ViewModels.ForgotPasswordVerificationViewModel

<div class="container-fluid">
    <!-- Row -->
    <div class="table-struct full-width full-height">
        <div class="table-cell vertical-align-middle">
            <div class="auth-form  ml-auto mr-auto no-float">
                <div class="panel panel-default card-view mb-0">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Enter The Verification Code You Received Through SMS</h6>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-12 col-xs-12">
                                    <div class="form-wrap">
                                        <form asp-controller="Account" asp-action="ForgotPasswordVerification" method="post">
                                            <partial name="_ValidationSummary" />
                                            <div class="form-group">
                                                <input type="hidden" class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber">
                                                <div class="input-group">
                                                    <label class="control-label mb-10" asp-for="Code">Verification Code</label>
                                                    <input type="text" class="form-control" required asp-for="Code" placeholder="Enter your code">
                                                    <div class="input-group-addon"><i class="icon-lock"></i></div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-success btn-block">Confirm Code</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>
