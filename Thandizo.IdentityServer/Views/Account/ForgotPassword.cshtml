@model Thandizo.DataModels.Identity.ViewModels.ForgotPasswordViewModel

<div class="container-fluid">
    <!-- Row -->
    <div class="table-struct full-width full-height">
        <div class="table-cell vertical-align-middle">
            <div class="auth-form  ml-auto mr-auto no-float">
                <div class="panel panel-default card-view mb-0">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Enter Your Phone Number</h6>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-12 col-xs-12">
                                    <div class="form-wrap">
                                        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                                            <partial name="_ValidationSummary" />
                                            <div class="form-group">
                                                <label class="control-label mb-10" for="@Model.PhoneNumber">Phone Number</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" required asp-for="PhoneNumber" placeholder="Enter Your Phone Number">
                                                    <div class="input-group-addon"><i class="icon-lock"></i></div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-success btn-block">Confirm</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>
